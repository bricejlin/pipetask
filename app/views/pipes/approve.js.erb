<% if @pipe.approved? %>
		$('div#<%= dom_id(@pipe) %>').children('.flexslider').css('border-bottom','8px solid #7cea6d');
		$('div#<%= dom_id(@pipe) %>').children('a.toggle').text('approved').css('color','#7cea6d');
<% else %>
		$('div#<%= dom_id(@pipe) %>').children('.flexslider').css('border-bottom','8px solid white');
		$('div#<%= dom_id(@pipe) %>').children('a.toggle').text('approve').css('color','#afafaf');
<% end %>