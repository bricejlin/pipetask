<h1>Create a new pipe</h1>

<%= form_for @pipe do |f| %>
	<%= render 'shared/errors', object: @pipe %>
	<fieldset>
		<p>
			<%= f.label :name %><br/>
			<%= f.text_field :name, size: 40, autofocus: true %>
		</p>
		<p>
			<%= f.label :sides_shot %><br/>
			<%= f.text_field :sides_shot, size: 36 %>
		</p>
		<p>

		</p>
		<%= f.fields_for :images do |img| %>
		<p>
			<%= img.label :url, 'Image Filename' %><br/>
			<%= img.text_field :url %>
		</p>
		<% end %>
		<p>
			<%= f.submit %>
			<%= link_to 'Cancel', root_path %>
		</p>
	</fieldset>
<% end %>